<%= form_for @maintenance_feature do |f| %>
<%= f.label :location %>
<%= f.text_field :location%> <br>

<%= f.label :issue %>
<%= f.text_field :issue %> <br>

<%= f.label :tools_needed %>
<%= f.text_field :tools_needed%> <br>
<%= f.select :task_completed, [["Task Completed", true], ["Needs Attention", false]]%><br>
<%= f.hidden_field :trail_id, value: @trail_id %>
<%= f.submit "#{submit_button}", :class => 'button'%>
<% end%>